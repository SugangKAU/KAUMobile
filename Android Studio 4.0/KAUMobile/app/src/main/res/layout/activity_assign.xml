<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.assign.AssignActivity" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:text="과제 - n주차"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/textClass"
            android:textSize="24dp" android:textStyle="bold"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            android:layout_marginStart="11dp" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/textTitle2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTitle2" android:text="수업자료 및 기타"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="66dp" android:layout_marginStart="16dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:id="@+id/recyclerView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/textTitle2"
            app:layout_constraintBottom_toTopOf="@+id/btnUpload"/>
    <Button
            android:text="Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnUpload"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="과제"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/editText2"/>
    <TextView
            android:text="과제 내용"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/editText3"/>
    <TextView
            android:text="과제 기한"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="@color/design_default_color_on_secondary"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="68dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:background="@drawable/edittext_box"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/btnUpload" app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginBottom="9dp" app:layout_constraintBottom_toTopOf="@+id/textView6"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:background="@drawable/edittext_box"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            android:layout_marginStart="25dp" android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/textView7"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:background="@drawable/edittext_box"
            android:ems="10"
            android:id="@+id/editText4"
            app:layout_constraintStart_toStartOf="@+id/textView7" android:layout_marginTop="9dp"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>
</androidx.constraintlayout.widget.ConstraintLayout>