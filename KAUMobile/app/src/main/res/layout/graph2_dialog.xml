<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp" >
        <ImageButton
            android:id="@+id/button_graph2_prevclass"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_prev_black"
            tools:ignore="VectorDrawableCompat" />
        <TextView
            android:id="@+id/text_graph2_semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021년도 1학기"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="25sp" />
        <ImageButton
            android:id="@+id/button_graph2_nextclass"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_next_black"
            tools:ignore="VectorDrawableCompat" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="15dp" />

</LinearLayout>