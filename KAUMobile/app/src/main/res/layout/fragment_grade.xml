<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.grade.GradeFragment">

    <TextView
        android:id="@+id/text_grade_semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="2021년도 1학기"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_grade_prevsemester"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/text_grade_semester"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_prev_black"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/button_grade_nextsemester"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="33dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/text_grade_semester"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_next_black"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/text_grade_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="과목명 : 안드로이드"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_semester" />

    <ImageButton
        android:id="@+id/button_grade_prevsubject"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="21dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_semester"
        app:srcCompat="@drawable/ic_prev_black"
        tools:ignore="VectorDrawableCompat" />

    <ImageButton
        android:id="@+id/button_grade_nextsubject"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="60dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_semester"
        app:srcCompat="@drawable/ic_next_black"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/text_grade_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종합성적"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/text_grade_prepare_name"
        app:layout_constraintEnd_toStartOf="@+id/text_grade_full"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_subject" />

    <TextView
        android:id="@+id/text_grade_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="B+"
        android:textColor="#E01A00"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/text_grade_prepare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_grade_full_name"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_subject" />

    <TextView
        android:id="@+id/text_grade_prepare_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예습"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/text_grade_review_name"
        app:layout_constraintEnd_toStartOf="@+id/text_grade_prepare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_full_name" />

    <TextView
        android:id="@+id/text_grade_prepare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textColor="#D68000"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/text_grade_review"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_grade_prepare_name"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_full" />

    <TextView
        android:id="@+id/text_grade_review_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="복습"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/text_grade_assign_name"
        app:layout_constraintEnd_toStartOf="@+id/text_grade_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_prepare_name" />

    <TextView
        android:id="@+id/text_grade_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textColor="#D68000"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/text_grade_assign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_grade_review_name"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_prepare" />

    <TextView
        android:id="@+id/text_grade_assign_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과제"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/button_grade_graph1"
        app:layout_constraintEnd_toStartOf="@+id/text_grade_assign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_review_name" />

    <TextView
        android:id="@+id/text_grade_assign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="B"
        android:textColor="#D68000"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/button_grade_graph1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_grade_assign_name"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_review" />

    <Button
        android:id="@+id/button_grade_graph1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과목별 수행 그래프"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_grade_assign_name"
        app:layout_constraintBottom_toTopOf="@+id/button_grade_graph2" />

    <Button
        android:id="@+id/button_grade_graph2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="학기별 성적 그래프"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_grade_graph1"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>