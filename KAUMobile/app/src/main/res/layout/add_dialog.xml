<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_classname_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="강의 이름" />

        <EditText
            android:id="@+id/edit_classname_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/text_professor_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="교수명" />

        <EditText
            android:id="@+id/edit_professor_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/text_classroom_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="강의실" />

        <EditText
            android:id="@+id/edit_classroom_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/text_classtime_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강의 시간(요일, 시작시간, 종료시간)" />

            <ImageButton
                android:id="@+id/button_add_addtime"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/ic_plus_20dp"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/button_add_deletetime"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_minus_20dp"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinner_week_add"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spinner_starttime_add"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
                <Spinner
                    android:id="@+id/spinner_endtime_add"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner_week_add2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
            <Spinner
                android:id="@+id/spinner_starttime_add2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
            <Spinner
                android:id="@+id/spinner_endtime_add2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>